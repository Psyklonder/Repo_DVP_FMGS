@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es-co">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body style="background-color: #ddd!important">
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
        </symbol>

        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </symbol>
    </svg>
    <br />
    <div class="container bg-light">
        <br />
        <div class="card">
            <div class="card-header">
                <h5>Registro de usuarios</h5>
            </div>
            <div class="card-body">
                <div id="AlertSuccess" class="alert alert-success d-flex align-items-center d-none" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
                    <div>
                        <strong>Realizado!</strong> <span></span>
                    </div>
                </div>
                <div id="AlertDanger" class="alert alert-danger d-flex align-items-center d-none" role="alert">
                    <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill" /></svg>
                    <div>
                        <strong>Error</strong> <span></span>
                    </div>
                </div>
                <h5>Datos personales</h5>
                <div class="row">
                    <div class="col-md-4">
                        <label for="Nombres" class="control-label">Nombres</label>
                        <input id="Nombres" type="text" placeholder="" class="form-control" />
                        <span class="text-danger" id="NombresRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="Apellidos" class="control-label">Apellidos</label>
                        <input id="Apellidos" type="text" placeholder="" class="form-control" />
                        <span class="text-danger" id="ApellidosRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="Email" class="control-label">Correo electrónico</label>
                        <input id="Email" type="email" placeholder="" class="form-control" />
                        <span class="text-danger" id="EmailRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="TipoIdentificacion" class="control-label">Tipo de identificación<span id="Spinner" class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span></label>
                        <select id="TipoIdentificacion" class="form-select" aria-label="Default select example">
                            <option selected value="0">Seleccione...</option>
                        </select>
                        <span class="text-danger" id="TipoIdentificacionRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="NumeroDocumento" class="control-label">No. documento</label>
                        <input id="NumeroDocumento" type="email" placeholder="" class="form-control" />
                        <span class="text-danger" id="NumeroDocumentoRequerido"></span>
                    </div>
                </div>
                <hr />
                <h5>Cuenta</h5>
                <div class="row">
                    <div class="col-md-4">
                        <label for="NombreUsuario" class="control-label">Nombre de usuario</label>
                        <input id="NombreUsuario" type="text" placeholder="" class="form-control" />
                        <span class="text-danger" id="NombreUsuarioRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="Password" class="control-label">Contraseña</label>
                        <input id="Password" type="password" placeholder="" class="form-control" />
                        <span class="text-danger" id="PasswordRequerido"></span>
                    </div>
                    <div class="col-md-4">
                        <label for="PasswordRepetir" class="control-label">Confirmar contraseña</label>
                        <input id="PasswordRepetir" type="password" placeholder="" class="form-control" />
                        <span class="text-danger" id="PasswordRepetirRequerido"></span>
                    </div>
                </div>
                <hr />
                <button id="BtnRegistrar" type="button" class="btn btn-primary">
                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    <span>Registrar</span>
                </button>
                <button id="BtnCancelar" type="button" class="btn btn-secondary">Cancelar</button>
            </div>
        </div>
        <br />

    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            $("#Nombres").on("keyup", function () {
                $("#NombresRequerido").text('')
            });
            $("#Apellidos").on("keyup", function () {
                $("#ApellidosRequerido").text('')
            });
            $("#Email").on("keyup", function () {
                $("#EmailRequerido").text('')
            });
            $("#TipoIdentificacion").on("change", function () {
                $("#TipoIdentificacionRequerido").text('')
            });
            $("#NumeroDocumento").on("keyup", function () {
                $("#NumeroDocumentoRequerido").text('')
            });
            $("#NombreUsuario").on("keyup", function () {
                $("#NombreUsuarioRequerido").text('')
            });
            $("#Password").on("keyup", function () {
                $("#PasswordRequerido").text('')
            });
            $("#PasswordRepetir").on("keyup", function () {
                $("#PasswordRepetirRequerido").text('')
            });


            $.ajax({
                url: '@Url.Action("ObtenerTiposIdentificacion", "Registro")',
                type: 'GET',
                dataType: 'json',
                contentType: 'application/json; charset=utf-8',
                data: null,
                beforeSend: function () {
                    $("#Spinner").removeClass('d-none');
                },
                success: function (data) {
                    var tipos = $("#TipoIdentificacion");
                    $.each(data, function (ind, elem) {
                        tipos.append($("<option />").val(elem.id).text(elem.nombre));
                    });

                },
                error: function (error) {
                    var obj = error.responseText;

                },
                complete: function () {
                    $("#Spinner").addClass('d-none');
                }
            });


            $("#BtnCancelar").click(function (event) {
                event.preventDefault();
                var url = '@Url.Action("Index", "InicioSesion")';
                window.location.href = url;
            });

            $("#BtnRegistrar").click(function (event) {
                event.preventDefault();
                var correcto = true;
                //PERSONA
                if ($("#Nombres").val().trim() === '') {
                    correcto = false;
                    $("#NombresRequerido").text('Nombres requerido');
                }
                if ($("#Apellidos").val().trim() === '') {
                    correcto = false;
                    $("#ApellidosRequerido").text('Apellidos requerido');
                }
                if ($("#Email").val().trim() === '') {
                    correcto = false;
                    $("#EmailRequerido").text('Email requerido');
                }
                if ($("#TipoIdentificacion").val() === '0') {
                    correcto = false;
                    $("#TipoIdentificacionRequerido").text('Tipo de identificación requerido');
                }
                if ($("#NumeroDocumento").val().trim() === '') {
                    correcto = false;
                    $("#NumeroDocumentoRequerido").text('No. de documento requerido');
                }
                //USUARIO
                if ($("#NombreUsuario").val().trim() === '') {
                    correcto = false;
                    $("#NombreUsuarioRequerido").text('Nombre de usuario requerido');
                }
                if ($("#Password").val().trim() === '') {
                    correcto = false;
                    $("#PasswordRequerido").text('Contraseña requerida');
                }
                if ($("#PasswordRepetir").val().trim() === '') {
                    correcto = false;
                    $("#PasswordRepetirRequerido").text('Repetir requerido');
                }
                else if ($("#Password").val().trim() !== $("#PasswordRepetir").val()) {
                    correcto = false;
                    $("#PasswordRepetirRequerido").text('Por favor confirme la contraseña');
                }
                if (correcto) {
                    $.ajax({
                        url: '@Url.Action("RegistrarUsuario", "Registro")',
                        type: 'GET',
                        dataType: 'json',
                        contentType: 'application/json; charset=utf-8',
                        data: {
                            Nombres: $("#Nombres").val(), Apellidos: $("#Apellidos").val(),
                            NumeroIdentificacion: $("#NumeroDocumento").val(), Email: $("#Email").val(),
                            TipoIdentificacionId: $("#TipoIdentificacion").val(), NombreUsuario: $("#NombreUsuario").val(),
                            Password: $("#Password").val()
                        },
                        beforeSend: function () {
                            $("#BtnRegistrar>span:first-child").removeClass('d-none');
                            $("#BtnRegistrar>span:last-child").text('Procesando');
                        },
                        success: function (data) {
                            $("#AlertSuccess").removeClass('d-none');
                            $("#AlertSuccess > div > span").text(data.value);
                            $("#AlertDanger").addClass('d-none');
                            Limpiarinputs();
                        },
                        error: function (error) {
                            $("#AlertDanger").removeClass('d-none');
                            $("#AlertDanger > div > span").text(error.responseText);
                            $("#AlertSuccess").addClass('d-none');
                        },
                        complete: function () {
                            $("#BtnRegistrar>span:first-child").addClass('d-none');
                            $("#BtnRegistrar>span:last-child").text('Registrar');
                        }
                    });
                }


            });

            function Limpiarinputs() {
                $("#Nombres").val('');
                $("#Apellidos").val('');
                $("#Email").val('');
                $("#TipoIdentificacion").val('0');
                $("#NumeroDocumento").val('');
                $("#NombreUsuario").val('');
                $("#Password").val('');
                $("#PasswordRepetir").val('');
            }

            $(".form-select").on("change", function () {
                $("#AlertSuccess").addClass('d-none');
                $("#AlertDanger").addClass('d-none');
            });
            
            $(".form-control").on("keyup", function () {
                $("#AlertSuccess").addClass('d-none');
                $("#AlertDanger").addClass('d-none');
            });

        });

    </script>
</body>
</html>